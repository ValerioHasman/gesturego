@model Gesture_Go_v1.Models.EsqueceuSenha

@{
    ViewBag.Title = "EsqueceuSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("EsqueceuSenha", "Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Recuperar Senha</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EmailRec, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-md-12 ">
                @Html.EditorFor(model => model.EmailRec, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => model.EmailRec, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Enviar" class="btn btn-block btn-primary"/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
