<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestrure Go</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script async src="https://cdn.tiny.cloud/1/no-apikey/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script async src="https://cdn.tiny.cloud/1/no-origin/tinymce/5.10.0-121/tinymce.min.js"></script>
</head>
<body>


    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Gesture Go", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        @Html.ActionLink("Home", "PaginaInicialIndex", "PaginaInicial", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-link text-muted">|</li>
                    <li class="nav-item">
                        @Html.ActionLink("Progresso", "Progresso", "PaginaInicial", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-link text-muted">|</li>
                    <li class="nav-item">
                        @Html.ActionLink("Perfil", "Perfil", "PaginaInicial", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-link text-muted">|</li>
                    <li class="nav-item">
                        @Html.ActionLink("Posts", "Posts", "Post", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @{
                        string a = Convert.ToString(User.Identity.Name.Split('|')[2]);

                        if (a == "1")
                        {
                            <li class="nav-item">
                                @Html.ActionLink("| Adiconar imagens", "AddImagens", "AdmImagens", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    }


                </ul>
            </div>



            <button class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5zM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5z" />
                </svg>
                @Html.ActionLink("Sair", "Sair", "Home", new { @class = "text-white" })
            </button>


        </nav>
    }

    <div class="container body-content pt-2">
        @RenderBody()

        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>tinymce.init({ selector: 'textarea' });</script>
    @if (TempData["MSG"] != null)
    {
        <script>
$(document).ready(function () {
var titulo = "";
switch ("@TempData["MSG"].ToString().Split('|')[0]") {
case "success":
titulo = "Sucesso";
break;
case "warning":
titulo = "Atenção";
break;
case "error":
titulo = "Erro";
break;
case "info":
titulo = "Informação";
break;
}
swal(titulo, "@Html.Raw(TempData["MSG"].ToString().Split('|')[1])",
"@TempData["MSG"].ToString().Split('|')[0]");
});
        </script>
    }
</body>
</html>